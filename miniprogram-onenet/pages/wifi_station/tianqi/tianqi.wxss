/* 设置容器样式 */
.container {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  height: 100vh;
  background-color: #f5f5f5;
}

/* 设置数据盒子样式 */
.data-box {
  display: flex;
  width: 80%;
  padding: 20px;
  background-color: #ffffff;
  box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
  border-radius: 10px;
  margin-bottom: 20px;
}

/* 单个数据项的样式 */
.single-item {
  justify-content: center;
}

/* 设置数据项样式 */
.data-item {
  flex: 1;
  text-align: center;
  padding: 10px;
  border-right: 1px solid #e0e0e0;
}

.data-item:last-child {
  border-right: none;
}

/* 设置数据标签样式 */
.data-label {
  display: block;
  font-size: 16px;
  color: #888888;
  margin-bottom: 10px;
}

/* 设置数据值样式 */
.data-value {
  display: block;
  font-size: 24px;
  color: #333333;
  font-weight: bold;
}

/* 设置按钮样式 */
.action-button {
  width: 80%;
  padding: 15px;
  background-color: #1aad19;
  color: white;
  text-align: center;
  border: none;
  border-radius: 10px;
  font-size: 18px;
  box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
  margin-top: 20px;
}
